{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"bundle:nightly": {
			"dependsOn": ["^build", "@neira-coder/vscode-webview#build:nightly"],
			"outputs": ["build/**"]
		},
		"vsix:nightly": {
			"dependsOn": ["bundle:nightly"],
			"inputs": ["build/**"],
			"outputs": ["../../../bin/**"]
		}
	}
}
